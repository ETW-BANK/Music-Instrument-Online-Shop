@model IEnumerable<MusicShop.Models.Product>

<div class="container">
    <div class="mb-4">
        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to Categories</a>
    </div>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm">
                   
                    <img src="@product.ImageUrl" class="card-img-top img-fluid" alt="@product.Title" style="max-height: 200px; object-fit: cover;">
                    
                    <div class="card-body d-flex flex-column">
                       
                        <h5 class="card-title">@product.Title</h5>
                       
                        <p class="card-text">@product.Description</p>

                        <div class="pl-1">


                            <p class="card-subtitle h5 text-warning opacity-75  text-center">Price:<span>@product.Price.ToString("c")</span></p>


                        </div>
                       
                        <a href="@Url.Action("Details",  new { productId = product.Id })" class="btn btn-primary mt-auto">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
